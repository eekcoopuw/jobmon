---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: jobmon-workflow-reaper
  namespace: {{namespace}}
  labels:
    app: jobmon-workflow-reaper
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jobmon-workflow-reaper
  template:
    metadata:
      labels:
        app: jobmon-workflow-reaper
        name: jobmon-workflow-reaper
    spec:
      terminationGracePeriodSeconds: 60
      containers:
      - image: {{jobmon_container_uri}}
        name: jobmon-workflow-reaper
        command: ["jobmon"]
        args: ["start", "workflow_reaper"]
        env:
        - name: EXTERNAL_DB_HOST
          value: "{{db_host}}"
        - name: DB_USER
          value: "{{db_user}}"
        - name: EXTERNAL_DB_PORT
          value: "{{db_port}}"
        - name: JOBMON_SERVICE_USER_PWD
          value: "{{db_pass}}"
        - name: JOBMON_PORT
          value: "{{jobmon_port}}"
        - name: SLACK_TOKEN
          value: "{{slack_token}}"
        - name: WF_SLACK_CHANNEL
          value: "{{wf_slack_channel}}"
        - name: JOBMON_SERVER_FQDN
          value: "traefik"
        - name: JOBMON_SERVICE_PORT
          value: "80"
