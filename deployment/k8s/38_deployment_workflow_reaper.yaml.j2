---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: jobmon-workflow-reaper
  namespace: {{namespace}}
  labels:
    app: jobmon-workflow-reaper
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jobmon-workflow-reaper
  template:
    metadata:
      labels:
        app: jobmon-workflow-reaper
        name: jobmon-workflow-reaper
    spec:
      terminationGracePeriodSeconds: 60
      containers:
      - image: {{jobmon_container_uri}}
        name: jobmon-workflow-reaper
        command: ["jobmon_server"]
        args: ["workflow_reaper", "start"]
        env:
        - name: SLACK_API_URL
          valueFrom:
            secretKeyRef:
              key: SLACK_API_URL
              name: {{rancher_slack_secret}}
        - name: SLACK_CHANNEL_DEFAULT
          valueFrom:
            secretKeyRef:
              key: SLACK_CHANNEL_DEFAULT
              name: {{rancher_slack_secret}}
        - name: SLACK_TOKEN
          valueFrom:
            secretKeyRef:
              key: SLACK_TOKEN
              name: {{rancher_slack_secret}}
        - name: WEB_SERVICE_FQDN
          value: "traefik"
        - name: WEB_SERVICE_PORT
          value: "80"
