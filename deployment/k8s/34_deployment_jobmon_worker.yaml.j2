---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: jobmon-worker
  namespace: {{namespace}}
  labels:
    app: jobmon-worker
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jobmon-worker
  template:
    metadata:
      labels:
        app: jobmon-worker
        name: jobmon-worker
    spec:
      terminationGracePeriodSeconds: 60
      containers:
      - image: {{jobmon_container_uri}}
        name: jobmon-worker
        env:
        - name: DB_HOST
          valueFrom:
            secretKeyRef:
              key: DB_HOST
              name: {{rancher_db_secret}}
        - name: DB_PORT
          valueFrom:
            secretKeyRef:
              key: DB_PORT
              name: {{rancher_db_secret}}
        - name: DB_USER
          valueFrom:
            secretKeyRef:
              key: DB_USER
              name: {{rancher_db_secret}}
        - name: DB_PASS
          valueFrom:
            secretKeyRef:
              key: DB_PASS
              name: {{rancher_db_secret}}
        - name: USE_LOGSTASH
          value: "{{use_logstash}}"
        - name: LOGSTASH_HOST
          value: "logstash"
        - name: LOGSTASH_PORT
          value: "5000"
        - name: LOGSTASH_PROTOCOL
          value: "TCP"
        ports:
        - name: http
          containerPort: 80
        resources:
          limits:
            memory: 600Mi
            cpu: 1
          requests:
            cpu: 300m # m = mhz
            memory: 400Mi
        lifecycle:
          preStop:
            exec:
              command: ["sleep", "15"]
---
# https://kubernetes.io/docs/tasks/run-application/horizontal-pod-autoscale/
apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: jobmon-worker
  namespace: {{namespace}}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: jobmon-worker
  maxReplicas: 10
  minReplicas: 3
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 80
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 80
